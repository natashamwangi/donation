<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff449def" android:endColor="#ff2f6699" android:angle="270.0" />
            <stroke android:width="2.0dip" />
            <corners android:radius="10.0dip" />
            <padding android:left="10.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffd8d8d8" android:endColor="#ffffffff" android:angle="270.0" />
            <stroke android:width="1.0dip" />
            <corners android:radius="5.0dip" />
            <padding android:left="10.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff00bd00" android:endColor="#ff008000" android:angle="270.0" />
            <stroke android:width="1.0dip" />
            <corners android:radius="5.0dip" />
            <padding android:left="5.0dip" />
        </shape>
    </item>
</selector>