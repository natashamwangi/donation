<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg_main_blurred" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="-1" android:layout_height="-1" android:adjustViewBounds="true">
    <Button android:textColor="#fff" android:id="@id/btnLogin" android:background="@drawable/red_buttons" android:layout_width="-1" android:layout_height="60dp" android:text="Login" android:layout_alignLeft="@id/chkRemember" android:layout_centerVertical="true" android:onClick="login" />
    <CheckBox android:textColor="#fff" android:id="@id/chkRemember" android:layout_width="-2" android:layout_height="-2" android:layout_marginBottom="20dp" android:text="Remember Me" android:layout_above="@id/btnLogin" android:layout_alignLeft="@id/txtRegUsername" />
    <EditText android:id="@id/txtRegFullName" android:background="@drawable/test3" android:layout_width="-1" android:layout_height="40dp" android:hint="Password" android:ems="10" android:layout_above="@id/chkRemember" android:layout_centerHorizontal="true" android:inputType="81" />
    <EditText android:textColor="#fff" android:id="@id/txtRegUsername" android:background="@drawable/test3" android:layout_width="-1" android:layout_height="40dp" android:layout_marginTop="26dp" android:hint="Username" android:ems="10" android:layout_alignLeft="@id/txtRegFullName" android:layout_alignParentTop="true" />
    <Button android:textColor="#fff" android:id="@id/btnRegRegister" android:background="@drawable/button_styles" android:layout_width="-1" android:layout_height="60dp" android:layout_marginTop="33dp" android:text="Register" android:layout_below="@id/btnLogin" android:layout_alignLeft="@id/btnLogin" android:onClick="regsiter" />
</RelativeLayout>
